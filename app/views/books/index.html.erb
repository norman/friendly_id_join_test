<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Cached slug</th>
    <th>Publisher</th>
    <th>Author</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%=h book.name %></td>
    <td><%=h book.cached_slug %></td>
    <td><%=h book.publisher_id %></td>
    <td><%=h book.author_id %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New book', new_book_path %>